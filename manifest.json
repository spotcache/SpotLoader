{
    "manifest_version": 3,
    "name": "Spotify Song Downloader",
    "version": "1.0",
    "description": "Download Spotify songs in any quality and format with original metadata.",
    "permissions": [
      "downloads",
      "activeTab",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  