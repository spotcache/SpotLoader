{
   "manifest_version": 3,
   "name": "Spotify Enhancer",
   "version": "1.0",
   "description": "Enhances the Spotify experience by skipping ads and adding custom features.",
   "icons": {
     "128": "img/icon.png"
   },
   "content_scripts": [
     {
       "matches": [
         "https://open.spotify.com/*"
       ],
       "css": [
         "style.css"
       ],
       "js": [
         "js/content.js"
       ]
     }
   ],
   "host_permissions": [
     "https://open.spotify.com/*",
     "https://audio-ak-spotify-com.akamaized.net/*",
     "https://*.googlesyndication.com/*",
     "https://audio-akp-quic-spotify-com.akamaized.net/*",
     "https://gae-spclient.spotify.com/*",
     "https://*.audio-fa.scdn.co/*"
   ],
   "permissions": [
     "declarativeNetRequest"
   ],
   "declarative_net_request": {
     "rule_resources": [
       {
         "id": "ad_blocking_rules",
         "enabled": true,
         "path": "rules.json"
       }
     ]
   }
 }
 